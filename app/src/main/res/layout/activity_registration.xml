<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Registration">

    <ScrollView
        android:id="@+id/scrollReg"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/black_logo" />
            <Switch
                android:id="@+id/iUType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="Register as employeer. "
                android:textColor="#2C83BA"
                android:textFontWeight="400"
                android:textSize="17sp"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_field"
                app:drawableLeftCompat="@drawable/ic_username"
                android:drawablePadding="10dp"
                android:elevation="8dp"
                android:hint="First Name"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#2C83BA"
                android:textColorHint="#2C83BA"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_field"
                app:drawableLeftCompat="@drawable/ic_lastname"
                android:drawablePadding="10dp"
                android:elevation="8dp"
                android:hint="Lastname"
                android:inputType="text"
                android:padding="15dp"
                android:textColor="#2C83BA"
                android:textColorHint="#2C83BA"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_field"
                app:drawableLeftCompat="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:elevation="8dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#2C83BA"
                android:textColorHint="#2C83BA"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iContactNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_field"
                app:drawableLeftCompat="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:elevation="8dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#2C83BA"
                android:textColorHint="#2C83BA"/>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/iLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:padding="15dp"
                android:elevation="8dp"
                app:drawableLeftCompat="@drawable/ic_location"
                android:drawablePadding="10dp"
                android:textColorHint="#2C83BA"
                android:textColor="#2C83BA"
                android:hint="Dumaguete City"
                android:background="@drawable/shape_field"/>

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="100dp"
                android:background="@drawable/login_back"
                android:elevation="16dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?" />

                <TextView
                    android:id="@+id/backLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingLeft="5dp"
                    android:text="Login"
                    android:textColor="#2C83BA" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>